{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/register",
      "dest": "dist/index.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/login",
      "dest": "dist/index.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "5001",
    "CORS_ORIGIN": "https://usersfront.vercel.app",
    "API_URL": "https://userss.vercel.app"
  }
} 

